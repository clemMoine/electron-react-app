{
  'parser': 'babel-eslint',
  'extends': [
    'standard',
    'standard-react',
    'prettier',
    'prettier/flowtype',
    'prettier/react'
  ],
  'env': {
    'browser': true,
    'node': true,
    'jest': true
  },
  'plugins': ['flowtype'],
  'rules': {
    'react/sort-comp': 'error'
  },
  'settings': {
    'import/resolver': {
      'webpack': {
        'config': './config/webpack.resolve.config.js'
      }
    }
  }
}
